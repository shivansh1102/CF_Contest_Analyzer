<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>CF Contest Analyzer</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CF Analyzer</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-5">
        <div class="container">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <form action="/" method="post" class="form-control my-3">
                        <div class="mb-3 mt-3">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">Handle</span>
                                <input required name="handle" type="text" class="form-control" id="handle" placeholder="handle">
                            </div>
                            <span class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">From</span>

                                <input required type="date" class="form-control" name="startDate" id="startDate"></span>
                            <span class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">To</span>
                                <input required type="date" class="form-control" name="endDate" id="endDate"></span>
                        </div>
                        <div class="text-center my-2">
                            <button type="submit" class="btn btn-outline-danger">Submit</button>
                        </div>
                    </form>
                    <div class="col-sm-2"></div>
                </div>
            </div>
        </div>
        </div>
        <%- body %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>
